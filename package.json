{
  "name": "killconsole-sc",
  "version": "0.0.3",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "wait-on tcp:5173 && electron .",
    "display": "concurrently -k \"npm run dev\" \"npm run start\"",
    "electron:build": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.ZERO.killconsole",
    "productName": "ZERO Kill Console",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "electron/preload.mjs",
        "to": "preload.mjs"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerHeader": "build/header.bmp",
      "installerSidebar": "build/sidebar.bmp",
      "uninstallerSidebar": "build/uninstallerSidebar.bmp"
    },
    "msi": {
      "oneClick": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "publish": {
      "repo": "zero-killconsole-sc",
      "owner": "Cromzz",
      "provider": "github",
      "releaseType": "release"
    }
  },
  "electronBuilder": {
    "win": {
      "console": true
    }
  },
  "dev-app-update": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "bits-ui": "^2.8.13",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "svelte": "^5.35.5",
    "vite": "^7.0.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@sentry/electron": "^6.11.0",
    "@types/uuid": "^10.0.0",
    "animate.css": "^4.1.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "google-tts-api": "^2.0.2",
    "lucide-svelte": "^0.526.0",
    "moment": "^2.30.1",
    "ps-list": "^8.1.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "description": "This app is a kill console for Star Citizen",
  "author": "Cromzz",
  "license": "ISC"
}
